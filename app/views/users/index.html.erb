<div class="index-page">
  <% if user_signed_in? %>
    <div class="current-user">
      <img class="current-user-image" src=<%= @current_user.photo %> alt="Image" />
      <h3 class="current-user-name"><%= @current_user.name %></h3>
    </div>
    <div class="user-panel">
      <%= link_to new_user_post_path(user_id: @current_user.id) do %>
        <button>
          <span>Add New Posts</span>
        </button>
      <% end %>
        <%= link_to user_path(id: @current_user.id) do %>
        <button>
          <span>Profile</span>
        </button>
      <% end %>
<%= button_to "Sign Out", destroy_user_session_path, method: :delete, form: { class: 'logout-button-form' }, data: { confirm: 'Are you sure you want to sign out?' }, class: 'logout-button' %>
    </div>
  <% else %>
    <div class="sign_in">
      <p>
        Welcome to Posting! To start Posting,
      </p>
      <%= link_to 'Sign in', new_user_session_path %>
    </div>
  <% end %>
  <% if @users.any? %>
    <h2>All Posters</h2>
  <% end %>
  <ul class="user-list card">
    <% @users.each do |user| %>
      <%= link_to user_path(id: user.id) do %>
        <li class="user-tile">
          <img class="user-image" src=<%= user.photo %> alt="Image" />
          <div class="user-info">
            <h3 class="user-name"><%= user.name %></h3>
            <p>Number of posts: <%= user.posts_counter %></p>
          </div>
        </li>
      <% end %>
    <% end %>
  </ul>
</div>
